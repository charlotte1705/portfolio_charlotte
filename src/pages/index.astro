---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout sideBarActiveItemID="home">
  <div class="pb-12 mt-5">
    <div class="text-xl py-1">Hey there ðŸ‘‹</div>
    <div class="text-5xl font-bold">I'm Nguyen Tran</div>
    <div class="text-3xl py-3 font-bold">Full Stack Developer</div>
    <div class="py-2">
      <text class="text-lg">
        Passionate Full Stack Developer based in Ho Chi Minh City, Vietnam.
        Experienced in building web applications with Java, Spring Boot, React, and cloud technologies.
        Always eager to learn and take on new challenges.
      </text>
    </div>
    <div class="mt-8">
      <a class="btn" href="mailto:contact@example.com" target="_blank">Get in touch</a>
      <a href="/cv" class="btn btn-outline ml-5">View my experience</a>
    </div>
  </div>

  <div>
    <div class="text-3xl w-full font-bold mb-2">Skills</div>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mt-4">
      <div class="card bg-base-200">
        <div class="card-body p-4">
          <h3 class="font-bold">Languages</h3>
          <p class="text-sm">Java, JavaScript</p>
        </div>
      </div>
      <div class="card bg-base-200">
        <div class="card-body p-4">
          <h3 class="font-bold">Frameworks</h3>
          <p class="text-sm">Spring Boot, React</p>
        </div>
      </div>
      <div class="card bg-base-200">
        <div class="card-body p-4">
          <h3 class="font-bold">Databases</h3>
          <p class="text-sm">PostgreSQL, MySQL, Oracle</p>
        </div>
      </div>
      <div class="card bg-base-200">
        <div class="card-body p-4">
          <h3 class="font-bold">Tools & Cloud</h3>
          <p class="text-sm">Docker, AWS, Git</p>
        </div>
      </div>
    </div>
  </div>

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Featured Projects</div>
  </div>

  <HorizontalCard
    title="E-Commerce Platform"
    img="/post_img.webp"
    desc="Full-stack e-commerce application built with Spring Boot and React. Features include product management, shopping cart, and payment integration."
    url="#"
    badge="Featured"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Task Management System"
    img="/post_img.webp"
    desc="Web-based task management application with team collaboration features, using Java Spring Boot backend and React frontend."
    url="#"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Cloud Deployment Project"
    img="/post_img.webp"
    desc="Deployed microservices architecture to AWS cloud using Docker containers. Implemented CI/CD pipeline for automated deployments."
    url="#"
    badge="AWS"
  />

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Education & Certifications</div>
  </div>

  <div class="card bg-base-200 mb-4">
    <div class="card-body">
      <h3 class="card-title">FPT Polytechnic</h3>
      <p class="text-sm opacity-70">Associate's Degree in Software Engineering | 2020 - 2023</p>
    </div>
  </div>

  <div class="card bg-base-200 mb-4">
    <div class="card-body">
      <h3 class="card-title">AWS Cloud Quest: Cloud Practitioner</h3>
      <p class="text-sm opacity-70">Amazon Web Services Certification</p>
    </div>
  </div>

  <div class="card bg-base-200 mb-4">
    <div class="card-body">
      <h3 class="card-title">Oracle Database SQL Certified Associate</h3>
      <p class="text-sm opacity-70">Oracle Certification</p>
    </div>
  </div>

  <div class="card bg-base-200">
    <div class="card-body">
      <h3 class="card-title">Java SE 11 Developer</h3>
      <p class="text-sm opacity-70">Oracle Certification</p>
    </div>
  </div>
</BaseLayout>
